{
  "name": "bola-secure-api",
  "version": "2.0.0",
  "description": "API segura protegida contra BOLA (Broken Object Level Authorization) y otras vulnerabilidades",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "security-scan": "npm audit --audit-level=high",
    "lint": "eslint .",
    "docker:build": "docker build -t bola-secure-api .",
    "docker:run": "docker run -p 3001:3001 bola-secure-api"
  },
  "keywords": [
    "security",
    "api-security",
    "bola",
    "authorization",
    "owasp",
    "secure-coding"
  ],
  "author": "Security Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "ws": "^8.13.0",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}